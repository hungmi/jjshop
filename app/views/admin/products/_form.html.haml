= simple_form_for [:admin, @product] do |f|
  .group
    = f.association :page, label: "版型"
  .group
    = f.input :title, label: "標題"
  .group
    = f.input :description, label: "敘述"
  .group
    = f.input :quantity, label: "數量"
  .group
    = f.input :price, label: "價錢"
  .group
    = f.simple_fields_for :photo do |ff|
      = ff.input :image, as: :file, label: "圖片"
  = f.submit "GO", data: { disable_with: "Submitting..." }, class: 'btn btn-success'
  = link_to 'Back', root_path
