.col-xs-6.col-md-3.text-center
  - if product.photo.present?
    = link_to product_path(product), data: { 'no_turbolink': true } do
      = image_tag product.photo.image.thumb.url, class: 'thumbnail'
  - else
    = link_to product_path(product), data: { 'no_turbolink': true } do
      = image_tag "http://placehold.it/200x200&text=No Pic", class: 'thumbnail'
  %p.product-info= product.title.capitalize
  %p
    $ #{product.price}
  %p
    layout: #{product.page_id}
  = link_to 'Edit', edit_admin_product_path(product)
  |
  \#{link_to 'Delete', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }}