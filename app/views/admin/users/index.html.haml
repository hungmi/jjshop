%h1 Users List
%table.table
  %thead
    %th 使用者名稱
    %th 目前角色
    %th 操作
  - @users.each do |user|
    %tbody
      %td= user.email
      %td= user.admin? ? '管理者' : '一般使用者'
      - if User.where(is_admin: true).all.size > 1
        %td= button_to "轉換為#{user.admin? ? '一般使用者' : '管理者'}", admin_user_transfer_path(user)
